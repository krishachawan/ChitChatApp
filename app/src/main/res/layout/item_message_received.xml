<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <!-- This is the chat bubble container (left-aligned) -->
    <LinearLayout
        android:id="@+id/chat_bubble_received_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="80dp"
        android:minWidth="120dp"
        android:background="@drawable/chat_bubble_received"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- This is the sender's name (required for identifying the user) -->
        <TextView
            android:id="@+id/text_message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sender Name"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- This is the main message text -->
        <TextView
            android:id="@+id/text_message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="This is the received message text"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Image preview (if message type is image) -->
        <ImageView
            android:id="@+id/image_preview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:background="#E0E0E0" />

        <!-- Document preview (if message type is document) -->
        <LinearLayout
            android:id="@+id/document_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="#E0E0E0"
            android:visibility="gone"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/document_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_upload"
                android:tint="#666666" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/document_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="document.pdf"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/document_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="1.2 MB"
                    android:textColor="#80000000"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Timestamp row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="end|center_vertical">

            <!-- Like indicator (shows when message is liked) -->
            <ImageView
                android:id="@+id/like_indicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_heart_filled"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:text="0"
                android:textColor="#666666"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <!-- Timestamp -->
            <TextView
                android:id="@+id/text_message_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 PM"
                android:textColor="#80000000"
                android:textSize="10sp"
                android:minWidth="50dp" />

            <!-- Edited indicator -->
            <TextView
                android:id="@+id/text_edited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="(edited)"
                android:textColor="#80000000"
                android:textSize="9sp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>