<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <!-- This is the chat bubble container (left-aligned) -->
    <LinearLayout
        android:id="@+id/chat_bubble_received_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/chat_bubble_received"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- This is the sender's name (required for identifying the user) -->
        <TextView
            android:id="@+id/text_message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sender Name"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- This is the main message text -->
        <TextView
            android:id="@+id/text_message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="This is the received message text"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- This is the timestamp -->
        <TextView
            android:id="@+id/text_message_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:text="10:00 PM"
            android:textColor="#80000000"
            android:textSize="10sp" />

    </LinearLayout>

</RelativeLayout>